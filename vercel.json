{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "backend/**"
    }
  }
}
